<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="428dp"
        android:layout_height="405dp"
        android:layout_marginBottom="400dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="372dp"
        android:alpha="128"
        android:background="#BA4002"
        android:fontFamily="serif"
        android:text="Smart Homie"
        android:textAlignment="center"
        android:textColor="#BAFFFFFF"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="229dp"
        android:layout_height="49dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="56dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#DF000000"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="229dp"
        android:layout_height="49dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="148dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="12dp"
        android:background="#BA4002"
        android:fontFamily="serif"
        android:text="Email"
        android:textColor="#E7E6E0"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="98dp"
        android:layout_height="23dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="12dp"
        android:background="#BA4002"
        android:fontFamily="serif"
        android:text="Password"
        android:textColor="#E7E6E0"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="231dp"
        android:layout_height="41dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="60dp"
        android:background="#BA4002"
        android:backgroundTint="#BA4002"
        android:fontFamily="serif"
        android:shape="rectangle"
        android:text="Log In"
        android:textColor="#E7E6E0"
        android:textColorHighlight="#A56969"
        android:textColorLink="#D60D0D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#A6A31B1B" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif"
        android:text="Not a user? Register"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>